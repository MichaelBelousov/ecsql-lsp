  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run tests",
      "request": "launch",
      "runtimeArgs": [
        "run-script",
        "test"
      ],
      "env": {
        // path for SignTool
        "PATH": "${env:PATH};C:\\Program Files (x86)\\Windows Kits\\10\\bin\\10.0.19041.0\\x86",
        //"INSPECT_BRK": "1"
      },
      "runtimeExecutable": "npm",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "pwa-node",
      "internalConsoleOptions": "openOnSessionStart",
      "console": "integratedTerminal"
    },
    {
      "name": "Attach to native code",
      "type": "cppvsdbg",
      "request": "attach",
      "processId": "${command:pickProcess}"
    },
    {
      "name": "Unpackage update container",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}/test/.app-test-fixture/ServerStorage/updateFile1-0.1.0-full.nupkg",
      "args": [],
      "stopAtEntry": false,
      //"cwd": "${fileDirname}",
      "environment": [],
      "console": "integratedTerminal"
    },
  ]
}