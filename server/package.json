{
	"name": "ecsql-lsp-server",
  "description": "a language server for the ECSQL language used by iTwin.js",
	"version": "0.0.1",
  "author": {
    "name": "Michael Belousov",
    "email": "mikemikeb@protonmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/MichaelBelousov/ecsql-lsp.git"
  },
  "bugs": {
    "url": "https://github.com/MichaelBelousov/ecsql-lsp/issues"
  },
  "homepage": "https://github.com/MichaelBelousov/ecsql-lsp#readme",
  "keywords": [
    "ecsql",
    "vscode",
    "itwinjs"
  ],
	"license": "MIT",
	"engines": {
		"node": "*"
	},
	"dependencies": {
    "js-sql-parser": "^1.4.1",
		"vscode-languageserver": "^7.0.0",
		"vscode-languageserver-textdocument": "^1.0.1"
	},
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/fs-extra": "^9.0.13",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.10",
    "@types/sinon": "^10.0.11",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "chai": "^4.3.4",
    "cross-env": "^7.0.3",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-mocha": "^10.0.3",
    "eslint-plugin-prettier": "^4.0.0",
    "fs-extra": "^10.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.4",
    "mocha": "^9.2.1",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "sinon": "^13.0.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  },
  "scripts": {
    "build": "npm run build:typescript",
    "build:typescript": "tsc 1>&2 --outDir lib",
    "clean": "rimraf lib",
    "lint": "eslint --fix src/**/*.ts test/**/*.ts",
    "test": "cross-env TS_NODE_PROJECT=\"test/tsconfig.json\" mocha --timeout 100000 --require ts-node/register test/*.test.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,md,js}": [
      "prettier --write"
    ],
    "*.{ts,js}": [
      "eslint --fix"
    ]
  }
}
